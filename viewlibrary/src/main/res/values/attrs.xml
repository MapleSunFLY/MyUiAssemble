<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IndexLineCartView">
        <!--虚线属性-->
        <attr name="iLCDottedLineHeight" format="dimension" />
        <attr name="iLCDottedLineColor" format="color" />
        <attr name="iLCDottedSpacing" format="dimension" />

        <!--实线属性-->
        <attr name="iLCSolidLineColor" format="color" />
        <attr name="iLCSolidLineHeight" format="dimension" />

        <!--点与值的属性-->
        <attr name="iLCPointColor" format="color" />
        <attr name="iLCExceptionsPointColor" format="color" />
        <attr name="iLCPointRadius" format="dimension" />
        <attr name="iLCValueSize" format="dimension" />


        <!--底部文本-->
        <attr name="iLCBottomTextColor" format="color" />
        <attr name="iLCBottomTextSize" format="dimension" />

        <!--左边文本-->
        <attr name="iLCLeftTextColor" format="color" />
        <attr name="iLCLeftTextSize" format="dimension" />

        <!--x点之间的间距-->
        <attr name="iLCXInterval" format="dimension" />

        <!--背景色：控件背景有透明度时需要设置背景底色和透明色-->
        <attr name="iLCBackgroundColor" format="color" />
        <attr name="iLCTransparentColor" format="color" />

        <!--区间文本大小-->
        <attr name="iLCRangeTextSize" format="dimension" />
    </declare-styleable>
    <declare-styleable name="LineCartView">

        <attr name="lineCartDottedLineHeight" format="dimension" />
        <attr name="lineCartDottedLineColor" format="color" />
        <attr name="lineCartDottedCoordinate" format="dimension" />
        <attr name="lineCartVerticalTextColor" format="color" />
        <attr name="lineCartVerticalTextSize" format="dimension" />
        <attr name="lineCartVerticalBackgroundColor" format="color" />
        <attr name="lineCartBottoTextColor" format="color" />
        <attr name="lineCartBottoTextSize" format="dimension" />
        <attr name="lineCartBottoHintColor" format="color" />
        <attr name="lineCartBottoHintSize" format="dimension" />
        <attr name="lineCartLineColor" format="color" />
        <attr name="lineCartLineHeight" format="dimension" />
        <attr name="lineCartPointSize" format="dimension" />
        <attr name="lineCartPointColor" format="color" />
        <attr name="lineCartScoreTextColor" format="color" />
        <attr name="lineCartScoreTextSize" format="dimension" />
        <attr name="lineCartXInterval" format="dimension" />
        <attr name="lineCartYInterval" format="dimension" />
    </declare-styleable>

    <declare-styleable name="StatisticsLineChart">
        <!--数字单位-->
        <attr name="statisticsNumUnit" format="string" />
        <!--折线单位-->
        <attr name="statisticsLineUnit" format="string" />
        <!--折线颜色-->
        <attr name="statisticsLineColor" format="color" />
        <!--虚线颜色-->
        <attr name="statisticsDottedLineColor" format="color" />
        <!--实线颜色-->
        <attr name="statisticsSolidLineColor" format="color" />
        <attr name="statisticsMaxBackgroundColor" format="color" />
        <attr name="statisticsMinBackgroundColor" format="color" />
        <attr name="statisticsLineHeight" format="dimension" />
        <attr name="statisticsLineTextSize" format="dimension" />
        <attr name="statisticsLineTextColor" format="color" />
        <attr name="statisticsShowMax" format="boolean" />
        <attr name="statisticsShowMin" format="boolean" />
    </declare-styleable>

    <declare-styleable name="UpdateProgressBar">
        <attr name="updateReachedBarColor" format="color" />
        <attr name="updateUnreachedBarColor" format="color" />
        <attr name="updateTextColor" format="color" />
        <attr name="updateBarHeight" format="dimension" />
        <attr name="updateMax" format="integer" />
        <attr name="updateProgress" format="integer" />
        <attr name="updateSuffix" format="string" />
        <attr name="updatePrefix" format="string" />
        <attr name="updateTextVisibility" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ArcProgressBar">
        <attr name="arcFinishedColor" format="color" />
        <attr name="arcUnfinishedColor" format="color" />
        <attr name="arcProgressMax" format="integer" />
        <attr name="arcProgress" format="integer" />
        <attr name="arcFullDegree" format="integer" />
        <attr name="arcWidth" format="integer" />
        <attr name="animaTime" format="integer" />
        <attr name="draggingEnabled" format="boolean" />
        <attr name="describeText" format="string" />
        <attr name="describeTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SaleProgressBar">
        <attr name="sideColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="sideWidth" format="dimension" />
        <attr name="overText" format="string" />
        <attr name="nearOverText" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="isNeedAnim" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CirclePercentView">
        <!--圆弧背景色-->
        <attr name="circleBgColor" format="reference" />
        <!--圆弧进度条颜色-->
        <attr name="circleProgressColor" format="reference" />
        <!--圆弧宽度-->
        <attr name="circleRadius" format="dimension" />
        <!--渐变开始颜色-->
        <attr name="circleStartColor" format="reference" />
        <!--渐变结束颜色-->
        <attr name="circleEndColor" format="reference" />
        <!--是否渐变-->
        <attr name="circleIsGradient" format="boolean" />
        <!--最大进度-->
        <attr name="circleMax" format="integer" />
        <!--当前进度-->
        <attr name="circleProgress" format="integer" />
    </declare-styleable>

    <declare-styleable name="WaveSideBar">
        <attr name="wsbTextSize" format="dimension" /><!--字体大小-->
        <attr name="wsbTextColor" format="color" /><!--字体颜色-->
        <attr name="wsbSelectedTextColor" format="color" /><!--点击字体颜色-->
        <attr name="wsbSelectedBackground" format="reference" /><!--点击背景-->
    </declare-styleable>

    <declare-styleable name="CalendarView">

        <attr name="calendar_padding" format="dimension" /><!--日历内部左右padding-->

        <attr name="week_background" format="color" /><!--周背景-->
        <attr name="week_line_background" format="color" /><!--线条颜色-->
        <attr name="week_text_color" format="color" /><!--周栏字体颜色-->
        <attr name="week_text_size" format="dimension" /><!--周栏字体大小-->
        <attr name="week_line_margin" format="dimension" /><!--线条margin-->

        <attr name="month_view" format="string" /><!--完全自定义月视图-->
        <attr name="week_view" format="string" /> <!--完全自定义周视图-->
        <attr name="year_view" format="string" /> <!--完全自定义年视图-->
        <attr name="week_bar_height" format="dimension" /> <!--星期栏的高度-->
        <attr name="week_bar_view" format="string" /> <!--如果需要的话使用自定义星期栏-->

        <attr name="scheme_text" format="string" />
        <attr name="day_text_size" format="dimension" />
        <attr name="lunar_text_size" format="dimension" />
        <attr name="calendar_height" format="dimension" />
        <attr name="calendar_match_parent" format="boolean" /> <!-- 全屏日历 -->
        <attr name="scheme_text_color" format="color" />
        <attr name="scheme_month_text_color" format="color" />
        <attr name="scheme_lunar_text_color" format="color" />
        <attr name="scheme_theme_color" format="color" />

        <attr name="selected_theme_color" format="color" />
        <attr name="selected_text_color" format="color" />
        <attr name="selected_lunar_text_color" format="color" />

        <attr name="current_day_text_color" format="color" />
        <attr name="current_day_lunar_text_color" format="color" />
        <attr name="current_month_text_color" format="color" />
        <attr name="other_month_text_color" format="color" />
        <attr name="current_month_lunar_text_color" format="color" />
        <attr name="other_month_lunar_text_color" format="color" />


        <!-- 年视图相关 -->
        <attr name="year_view_month_text_size" format="dimension" />
        <attr name="year_view_day_text_size" format="dimension" />
        <attr name="year_view_month_text_color" format="color" />
        <attr name="year_view_current_day_text_color" format="color" />
        <attr name="year_view_day_text_color" format="color" />
        <attr name="year_view_select_text_color" format="color" />
        <attr name="year_view_scheme_color" format="color" />
        <attr name="year_view_background" format="color" />
        <attr name="year_view_month_height" format="dimension" />
        <attr name="year_view_week_height" format="dimension" />
        <attr name="year_view_week_text_size" format="dimension" />
        <attr name="year_view_week_text_color" format="color" />
        <attr name="year_view_padding" format="dimension" />
        <attr name="year_view_month_margin_top" format="dimension" />
        <attr name="year_view_month_margin_bottom" format="dimension" />

        <!--日期范围-->
        <attr name="min_year" format="integer" />
        <attr name="max_year" format="integer" />
        <attr name="min_year_month" format="integer" />
        <attr name="max_year_month" format="integer" />
        <attr name="min_year_day" format="integer" />
        <attr name="max_year_day" format="integer" />


        <!--月视图是否可滚动-->
        <attr name="month_view_scrollable" format="boolean" />
        <!--周视图是否可滚动-->
        <attr name="week_view_scrollable" format="boolean" />
        <!--年视图是否可滚动-->
        <attr name="year_view_scrollable" format="boolean" />

        <!-- 月份显示模式 -->
        <attr name="month_view_show_mode">
            <enum name="mode_all" value="0" />
            <enum name="mode_only_current" value="1" />
            <enum name="mode_fix" value="2" />
        </attr>

        <!-- 自定义周起始 -->
        <attr name="week_start_with">
            <enum name="sun" value="1" />
            <enum name="mon" value="2" />
            <enum name="sat" value="7" />
        </attr>

        <!-- 自定义选择模式 -->
        <attr name="select_mode">
            <enum name="default_mode" value="0" />
            <enum name="single_mode" value="1" />
            <enum name="range_mode" value="2" />
            <enum name="multi_mode" value="3" />
        </attr>

        <!-- when select_mode = multi_mode -->
        <attr name="max_multi_select_size" format="integer" />

        <!-- when select_mode = range_mode -->
        <attr name="min_select_range" format="integer" />
        <attr name="max_select_range" format="integer" />

        <!-- auto select day -->
        <attr name="month_view_auto_select_day">
            <enum name="first_day_of_month" value="0" />
            <enum name="last_select_day" value="1" />
            <enum name="last_select_day_ignore_current" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="CalendarLayout">
        <attr name="default_status">
            <enum name="expand" value="0" />
            <enum name="shrink" value="1" />
        </attr>


        <!-- 手势模式 -->
        <attr name="gesture_mode">
            <enum name="default_mode" value="0" />
            <!--<enum name="only_calendar" value="1" />-->
            <enum name="disabled" value="2" />
        </attr>

        <attr name="calendar_show_mode">
            <enum name="both_month_week_view" value="0" />
            <enum name="only_week_view" value="1" />
            <enum name="only_month_view" value="2" />
        </attr>
        <attr name="calendar_content_view_id" format="integer" />
    </declare-styleable>

    <declare-styleable name="SectorMenuButton">
        <!--主按钮的大小-->
        <attr name="aebMainButtonSizeDp" format="dimension|reference" />

        <!--子按钮的大小-->
        <attr name="aebSubButtonSizeDp" format="dimension|reference" />

        <!--主按钮与子按钮之间的距离-->
        <attr name="aebButtonGapDp" format="dimension|reference" />

        <!--展开按钮的开始角度-->
        <attr name="aebStartAngleDegree" format="integer|reference" />

        <!--展开按钮的结束角度-->
        <attr name="aebEndAngleDegree" format="integer|reference" />

        <!--开启关闭菜单时播放动画的时间-->
        <attr name="aebAnimDurationMillis" format="integer|reference" />

        <!--按钮阴影效果的范围-->
        <attr name="aebButtonElevation" format="dimension|reference" />

        <!--当菜单为开启状态时全屏的背景颜色-->
        <attr name="aebMaskBackgroundColor" format="color|reference" />

        <!--当子按钮被选中，主按钮设置为选定状态-->
        <attr name="aebIsSelectionMode" format="boolean" />

        <!--主按钮的文字颜色-->
        <attr name="aebMainButtonTextColor" format="color|reference" />

        <!--子按钮文字颜色-->
        <attr name="aebSubButtonTextColor" format="color|reference" />

        <!--主按钮的文字大小-->
        <attr name="aebMainButtonTextSizeSp" format="dimension|reference" />

        <!--子按钮的文字大小-->
        <attr name="aebSubButtonTextSizeSp" format="dimension|reference" />

        <!--文本距离-->
        <attr name="aebButtonTextPd" format="float|reference" />

        <!--当按钮单点击时是否设置水波纹效果-->
        <attr name="aebRippleEffect" format="boolean" />

        <!--主按钮点击时水波纹效果的颜色，默认为按钮颜色-->
        <attr name="aebRippleColor" format="color|reference" />

        <!--主按钮旋转动画的角度-->
        <attr name="aebMainButtonRotateDegree" format="integer|reference" />

        <!--主按钮旋转动画的时间-->
        <attr name="aebMainButtonRotateAnimDurationMillis" format="integer|reference" />

        <!--模糊背景-->
        <attr name="aebBlurBackground" format="boolean" />

        <!--模糊处理-->
        <attr name="aebBlurRadius" format="float|reference" />
    </declare-styleable>

</resources>