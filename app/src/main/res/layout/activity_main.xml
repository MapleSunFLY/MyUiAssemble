<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fly.myuiassemble.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="进度条" />

            <Button
                android:id="@+id/btnLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="折线图" />

            <Button
                android:id="@+id/btnSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="字母排序" />

            <Button
                android:id="@+id/btnAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="动作播放" />

            <Button
                android:id="@+id/btnTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="计时器" />
        </LinearLayout>
    </ScrollView>

    <com.fly.viewlibrary.sectormenu.SectorMenuButton
        android:id="@+id/bottomSectorMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="150dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:aebAnimDurationMillis="200"
        app:aebBlurBackground="false"
        app:aebButtonGapDp="72dp"
        app:aebEndAngleDegree="200"
        app:aebMainButtonRotateAnimDurationMillis="200"
        app:aebMainButtonRotateDegree="45"
        app:aebMainButtonSizeDp="54dp"
        app:aebMaskBackgroundColor="#99333333"
        app:aebStartAngleDegree="89"
        app:aebSubButtonSizeDp="37dp"
        app:aebSubButtonTextColor="#ffffff"
        app:aebSubButtonTextSizeSp="10dp" />
</RelativeLayout>
